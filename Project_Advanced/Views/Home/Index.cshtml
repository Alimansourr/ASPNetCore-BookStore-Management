@{
    ViewData["Title"] = "Home Page";
}


<div id="bookCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000" style="margin: 0; padding: 0;">
    <!-- Pagination Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <!-- Slides -->
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <img src="~/Libraries/library1.jpg" class="d-block w-100" style="height: 70vh; object-fit: cover;" alt="Library Image 1">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-3">Welcome to Our Book Store</h1>
                <p class="lead">Find your next favorite story.</p>
                <a href="/Books" class="btn btn-primary btn-lg">Browse Books</a>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="~/Libraries/library2.jpg" class="d-block w-100" style="height: 70vh; object-fit: cover;" alt="Library Image 2">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-3">Explore Our Collection</h1>
                <p class="lead">Thousands of books for every reader.</p>
                <a href="/Books" class="btn btn-success btn-lg">Explore Now</a>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
            <img src="~/Libraries/library3.jpg" class="d-block w-100" style="height: 70vh; object-fit: cover;" alt="Library Image 3">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-3">Special Discounts</h1>
                <p class="lead">Great deals on popular titles.</p>
                <a href="/Books" class="btn btn-warning btn-lg">Shop Now</a>
            </div>
        </div>
    </div>

    <!-- Navigation Controls -->
    <a class="carousel-control-prev" href="#bookCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#bookCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-2 fixed-bottom">
    <div class="container">
        <p class="mb-0" style="font-size: 0.9rem;">&copy; 2024 Book Store</p>
        <p class="small text-muted mb-0">Powered by <span style="color: #f8c12c;">Book Lovers</span></p>
    </div>
</footer>

<!-- Style -->
<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow-x: hidden; 
    }

    .carousel {
        margin: 0;
        padding: 0;
    }

    .carousel-inner, .carousel-item {
        width: 100%;
    }

    .carousel img {
        width: 100%;
        height: 70vh; 
        object-fit: cover; 
    }

    footer {
        font-size: 0.9rem;
        background-color: #212529;
        position: fixed;
        bottom: 0;
        width: 100%;
    }
</style>
